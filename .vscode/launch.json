    "version": "0.2.0",
    "configurations": [{
        "name": "Launch server.js via nodemon",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "runtimeArgs": [
            "--debug=5858"
        ],
        "program": "${workspaceRoot}/server/server.js",
        "restart": true,
        "port": 5858,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }]
}